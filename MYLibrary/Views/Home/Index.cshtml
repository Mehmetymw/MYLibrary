@{
    ViewData["Title"] = "Home Page";

}


<header class="header">
    <nav class="navbar navbar-light bg-light">

        <button id="add-book" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addbook-modal">
            <i class="fa-regular fa-square-plus"></i>Kitap Ekle
        </button>

        <div class="modal fade" id="addbook-modal" tabindex="-1" aria-labelledby="addbook-modal-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addbook-modal-label">Kitap Ekle</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div>Kitap İsmi</div>
                            <input id="modal-book-name" type="text" />
                        </div>
                        <div class="form-group">
                            <div>Yazar İsmi</div>
                            <input id="modal-author" type="text" />
                        </div>
                        <div class="form-group">
                            <div>Kitap Resmi (url)</div>
                            <input id="modal-book-img" type="text" />
                        </div>
                        <div class="form-group">
                            <div>Kitap Açıklaması</div>
                            <input id="modal-book-sum" type="text" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button onclick="addNewBook()" type="button" class="btn btn-primary" data-bs-target="#result-modal" data-bs-toggle="modal">Kitabı Ekle</button>
                    </div>
                </div>
            </div>
        </div>

        <form class="form-inline searchbar" onsubmit="return false">
            <input id="searchbar-input" class="form-control mr-sm-2" placeholder="Kitap Ara" aria-label="Search">
            <button onclick="getBooksByName()" class="btn btn-outline-success my-2 my-sm-0" type="button">Ara</button>
        </form>
    </nav>
</header>
<body>
    <div class="main-container">
        <div id="book-container">
        </div>
    </div>
</body>